<?xml version="1.0" encoding="UTF-8"?>
<nifty>
 
  <screen id="start" controller="mygame.States.Scenario.GUIPlayerMain" >
    <layer id="background" backgroundColor="#0000">
      <!-- ... -->
    </layer>
    <layer id="foreground" backgroundColor="#0000" childLayout="center" >
      <panel id="panelInfo" height="15%" width="100%" valign="bottom" align="center"  childLayout="Horizontal"
             backgroundColor="#f600">  
        <panel id="panelMunicion" backgroundImage="Interface/RunningGame/interfacUB.png" height="100%" width="33.33%" valign="center" childLayout="center" 
             backgroundColor="#f600">  
            
                <effect>
                  <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                  <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
                  <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
                </effect>
                <text id="municion" font="aurulent-sans-16.fnt" color="#ffff" text="Municion:" align="center" valign="center" />
        </panel>

        <panel id="panelVidas" backgroundImage="Interface/RunningGame/interfacUB.png" height="100%" width="33.33%" valign="center" childLayout="center"
             backgroundColor="#f600">  
            
                <effect>
                  <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                  <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
                  <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
                </effect>
                <text id="vidas"  font="aurulent-sans-16.fnt" color="#ffff" text="Vidas:" align="center" valign="center" />
            
        </panel>
        <panel id="panelSalud" backgroundImage="Interface/RunningGame/interfacUB.png" height="100%" width="33.33%" valign="center" childLayout="center"
             backgroundColor="#f600">  
           
                <effect>
                  <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                  <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
                  <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
                </effect>
                <text id="salud"  font="aurulent-sans-16.fnt" color="#ffff" text="Salud:" align="center" valign="center" />
            
        </panel>
      </panel>
    </layer>
  </screen>
  
  
  
  

  <screen id="end">
   
  </screen>

    
</nifty>

    